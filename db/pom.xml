<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/POM/4.0.0"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
    <modelVersion>4.0.0</modelVersion>

    <artifactId>db</artifactId>
    <parent>
        <groupId>com.company</groupId>
        <artifactId>root</artifactId>
        <version>1.0-SNAPSHOT</version>
    </parent>
    <packaging>pom</packaging>
    <version>1.0-SNAPSHOT</version>
    <name>db</name>

    <properties>
        <!-- первая папка прокта -->
        <parent.project.basedir>${pom.parent.basedir}</parent.project.basedir>
        <db.source.basedir>${project.basedir}</db.source.basedir>
    </properties>

    <build>
        <plugins>

            <plugin>
                <groupId>org.codehaus.gmavenplus</groupId>
                <artifactId>gmavenplus-plugin</artifactId>
                <version>1.5</version>
                <executions>
                    <execution>
                        <phase>install</phase>
                        <goals>
                            <goal>execute</goal>
                        </goals>
                    </execution>
                </executions>
                <configuration>
                    <properties>
                        <property>
                            <name>addrDB</name>
                            <value>\data\inputdb\</value>
                        </property>

                        <property>
                            <name>nameDB</name>
                            <value>inputdb.s3db</value>
                        </property>

                        <property>
                            <name>sourceDir</name>
                            <value>${db.source.basedir}</value>
                        </property>

                        <property>
                            <name>parentDir</name>
                            <value>${parent.project.basedir}</value>
                        </property>
                    </properties>
                    <scripts>
                        <!-- TODO Отдельный параметр для сохранения сгенерированных скриптов в файл -->

                        <!-- Создание БД и юзера для неё (если БД и юзер уже есть - они дропнутся!) -->
                        <script>file:///${db.source.basedir}/src/groovy/create_database.groovy</script>

                        <!-- Создание тестовых данных -->
                        <!--<script>file:///${db.source.basedir}/load_test_data.groovy</script>-->

                        <!-- TODO Накатить аплдейты -->

                        <!-- Пересоздание вьюх, пакетов, функций -->
                        <!--<script>file:///${db.source.basedir}/update_objects.groovy</script>-->
                    </scripts>
                </configuration>
                <dependencies>
                    <dependency>
                        <groupId>org.codehaus.groovy</groupId>
                        <artifactId>groovy-all</artifactId>
                        <!-- any version of Groovy \>= 1.5.0 should work here -->
                        <version>2.4.4</version>
                        <scope>runtime</scope>
                    </dependency>
                    <!--<dependency>-->
                        <!--<groupId>postgresql</groupId>-->
                        <!--<artifactId>postgresql</artifactId>-->
                        <!--<version>9.1-901.jdbc4</version>-->
                    <!--</dependency>-->
                    <dependency>
                        <groupId>org.xerial</groupId>
                        <artifactId>sqlite-jdbc</artifactId>
                        <version>3.18.0</version>
                    </dependency>
                </dependencies>
            </plugin>

        </plugins>
    </build>
</project>